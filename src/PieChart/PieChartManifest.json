{
  "displayName": "Pie Chart",
  "defaultWidth": 362,
  "defaultHeight": 218,
  "components": "./PieChart.js",
  "icon": "./example-thumbnail.png",
  "resizeY": true,
  "props": [
    {
      "name": "items",
      "displayName": "What is this a chart of?",
      "type": "list",
      "listControl": {"sort": false}
    },
    {
      "name": "showPercentages",
      "displayName": "Show values as percentages",
      "type": "boolean",
      "default": false
    },
    {
      "name": "chartWidthPercentage",
      "displayName": "Chart Width (percentage)",
      "type": "number",
      "default": 50,
      "control": { "type": "slider", "min": 25, "max": 100 }
    }
  ],
  "childComponents": [
    {
      "name": "slices",
      "displayName": "Slices",
      "role": "listItem",
      "reference": "items",
      "props": [
        {
          "name": "label",
          "displayName": "Slice Label",
          "type": "text",
          "styles": {
            "fontFamily": "@body",
            "color": "@text",
            "fontSize": 12,
            "fontWeight": 600
          }
        },
        {
          "name": "sliceValue",
          "displayName": "Slice Value",
          "type": "number"
        },
        {
          "name": "sliceAction",
          "displayName": "Slice Action",
          "type": "action"
        },
        {
          "name": "numberOfSlices",
          "displayName": "Maximum Number of Slices",
          "type": "number",
          "default": 5,
          "control": { "type": "slider", "max": 6, "min": 2 }
        },
        {
          "name": "otherSliceLabel",
          "displayName": "Other Slice Label",
          "type": "text",
          "default": "Other"
        },
        {
          "name": "colorScheme",
          "displayName": "Color Scheme",
          "type": "number",
          "default": 0,
          "control": {
            "type": "menu",
            "options": [
              { "label": "Monochromatic", "value": 0 },
              { "label": "Custom", "value": 1 }
            ]
          }
        },
        {
          "name": "monochromaticScheme",
          "displayName": "Monochromatic Scheme",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "colorScheme": 0
          }
        },
        {
          "name": "customColor1",
          "displayName": "Slice 1 Color",
          "type": "color",
          "default": "@primary",
          "enabled": {
            "colorScheme": 1
          }
        },
        {
          "name": "customColor2",
          "displayName": "Slice 2 Color",
          "type": "color",
          "default": "#757575",
          "enabled": {
            "colorScheme": 1
          }
        },
        {
          "name": "customColor3",
          "displayName": "Slice 3 Color",
          "type": "color",
          "default": "#9e9e9e",
          "enabled": {
            "colorScheme": 1,
            "numberOfSlices": [3, 4, 5, 6]
          }
        },
        {
          "name": "customColor4",
          "displayName": "Slice 4 Color",
          "type": "color",
          "default": "#BDBDBD",
          "enabled": {
            "colorScheme": 1,
            "numberOfSlices": [4, 5, 6]
          }
        },
        {
          "name": "customColor5",
          "displayName": "Slice 5 Color",
          "type": "color",
          "default": "#E0E0E0",
          "enabled": {
            "colorScheme": 1,
            "numberOfSlices": [5, 6]
          }
        },
        {
          "name": "customColor6",
          "displayName": "Slice 6 Color",
          "type": "color",
          "default": "#EEEEEE",
          "enabled": {
            "colorScheme": 1,
            "numberOfSlices": 6
          }
        }
      ]
    }
  ]
}